FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
      p
      {
            solver          GAMG;
            tolerance       1e-6;
            relTol          0.05;

            smoother        GaussSeidel;


            nCellsInCoarsestLevel 50;
      }
      pFinal
      {
            $p;
            relTol          0;
      }
      "(U|k|B|nuTilda)"
      {
            solver          smoothSolver;
            smoother        symGaussSeidel;
            tolerance       1e-7;
            relTol          0;
      }
      "(U|k|B|nuTilda)Final"
      {
            $U;
            relTol          0;
      }     
}

