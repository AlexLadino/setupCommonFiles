		fieldAverage1
		{
                  type            	fieldAverage;
                  functionObjectLibs 	( "libfieldFunctionObjects.so" );
                  enabled         	true;
                  executeControl 		timeStep; // none; timeStep; writeTime; outputTime
                  executeInterval 	1; 			
                  writeControl    	writeTime; // none; timeStep; writeTime; outputTime
                  writeInterval   	1; 			
                  writeControl   	outputTime;
                  resetOnRestart 		false;
		
		    fields
		    (       
                        U
                        {
                              mean		on;
                              prime2Mean	on;
                              base		time;
                        }				
                        p
                        {
                              mean		on;
                              prime2Mean	off;
                              base		time;
                        }				
                        // TKE budgets  ------------------- 
                        convectionTKE
                        {
                              mean		on;
                              prime2Mean	off;
                              base		time;
                        }				
                        dissipationTKE
                        {
                              mean		on;
                              prime2Mean	off;
                              base		time;
                        }
                        pressureDiffusionTKEField
                        {
                              mean		on;
                              prime2Mean	off;
                              base		time;
                        }
                        turbulenceTransportTKEField
                        {
                              mean		on;
                              prime2Mean	off;
                              base		time;
                        }
                        // Secondary fields ------------------
                        vorticity
                        {
                              mean		on;
                              prime2Mean	on;
                              base		time;
                        }
                        enstrophy
                        {
                              mean		on;
                              prime2Mean	off;
                              base		time;
                        }                                                         
		    );
		
